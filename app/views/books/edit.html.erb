<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model: @book, url: update_list_path(@book.id), method: :patch do |f| %>

          <h5>Title</h5>
          <%= f.text_field :title %>

          <h5>Opinion</h5>
          <%= f.text_area :body %>

          <%= f.submit 'Update Book' %>

        <% end %>
</main>