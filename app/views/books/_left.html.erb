<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
        <p><h2>User info</h2></p>
        
        <table class="table">
          <tbody>
            <tr>
              <p><%= image_tag user.get_profile_image(100,100) %></p>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        
        <%= link_to edit_user_path(user), class:'btn btn-light btn-outline-secondary btn-block' do %>
          <i class="fa-solid fa-user-cog"></i>
        <% end %>

        <p><h1>New book</h1></p>
        <%= form_with model: book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
  
        <p>Opinion</p>
        <%=f.text_area :body %>
        <br>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
        
      <% end %>
    </div>
  </div>
</div>